{% extends "../layout.njk" %}
    
    {% block content %}
        <form action="/admin/profile" method="post">
            <div class="wrapper__body">
                <div class="wrapper__body__users-header">
                    <h1>Welcome {{user.name}}</h1>
                    <button>Save</button>
                </div>
                <div class="wrapper__body__users-fields">
                    <div class="wrapper__body__users-items">
                        <div class="wrapper__body__users-item">
                            <p>Name</p>
                            <div class="input">
                                <input 
                                    type="text"
                                    name="name"
                                    placeholder="name"
                                    value="{{user.name}}"
                                >
                            </div>
                        </div>

                        <div class="wrapper__body__users-item">
                            <p>Email</p>
                            <div class="input">
                                <input 
                                    type="email"
                                    name="email"
                                    placeholder="email"
                                    value="{{user.email}}"
                                >
                            </div>
                        </div>

                        <div class="wrapper__body__users-item">
                            <p>Password</p>
                            <div class="input">
                                <input 
                                    type="password"
                                    name="password"
                                    placeholder="password"
                                >
                            </div>
                        </div>
                    </div>
                </div>
                    
            </div>
        </form>
        <script src="/scripts.js"></script>
    {% endblock %}