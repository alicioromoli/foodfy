{% extends "./layout.njk" %}
    
    {% block content %}
    <form action="/admin/reset-password" method="post">
            <div class="wrapper__body">
                    <div class="wrapper__body__login-admin__header">
                        <h1>New Password</h1>
                    </div>
                    <div class="wrapper__body__login-admin__fields">
                        <div class="wrapper__body__login-admin__field">
                            <p>Email</p>
                            <div class="input">
                                <input 
                                    type="email"
                                    name="email"
                                    placeholder="place your email"
                                    value="{{user.email}}"
                                    onblur="Validate.apply(this, 'isEmail')"
                                >
                            </div>
                        </div>

                        <div class="wrapper__body__login-admin__field">
                            <p>Password</p>
                            <div class="input password">
                                <input 
                                    type="password"
                                    name="password"
                                    placeholder="place your password"
                                >
                            </div>
                        </div>

                        <div class="wrapper__body__login-admin__field">
                            <p>Password Repeat</p>
                            <div class="input">
                                <input 
                                    type="password"
                                    name="passwordRepeat"
                                    placeholder="Repeat your password"
                                    onblur="Validate.apply(this, 'passwordMatch')"
                                >
                            </div>
                        </div>
                        <input type="hidden" name="token" value="{{token}}">
                        <div class="wrapper__body__login-admin__field-footer">
                            <div></div>
                            <button type="submit">New Password</button>
                        </div>
                    </div>
            </div>
    </form>
        <script src="/scripts.js"></script>
    {% endblock %}