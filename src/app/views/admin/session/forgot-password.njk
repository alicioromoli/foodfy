{% extends "./layout.njk" %}
    
    {% block content %}
    <form action="/admin/forgot-password" method="post">
            <div class="wrapper__body">
                    <div class="wrapper__body__login-admin__header">
                        <h1>Lost your password?</h1>
                    </div>
                    <div class="wrapper__body__login-admin__fields">
                        <div class="wrapper__body__login-admin__field">
                            <p>Email</p>
                            <div class="input">
                                <input 
                                    type="email"
                                    name="email"
                                    placeholder="place your email"
                                    value="{{user.email}}"
                                    onblur="Validate.apply(this, 'isEmail')"
                                >
                            </div>
                        </div>
                        <div class="wrapper__body__login-admin__field-footer">
                            <div></div>
                            <button type="submit">Recover password</button>
                        </div>
                    </div>
            </div>
    </form>
        <script src="/scripts.js"></script>
    {% endblock %}