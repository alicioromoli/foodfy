<div class="wrapper__body__recipe__title">
    <h5>Name</h5>
    <input 
        type="text" 
        name="name"
        value="{{chef.name}}" >
</div>

<div class="wrapper__body__recipeImg">
    <h5>Avatar</h5>
    {% if chef.avatar_img %}
        <input 
            id="inputFile"
            type="text"
                {# value="{{req.file.originalname}}" #}
            value="{{chef.fileName}}"
        >
    {% endif %}
        <div id="photos-upload">
            <input 
                type="file" 
                name="avatar"
                accept="image/*"
                onchange="changeAvatar.setAvatarName(event)"
            >
            <p>Send Avatar</p>
        </div>
</div>


</div>