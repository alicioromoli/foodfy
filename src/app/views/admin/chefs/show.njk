{% extends "../layout.njk" %}
    
    {% block content %}
            <div class="wrapper__body">
                <div class="wrapper__header__recipe">
                    <h1>Chef: {{chef.name}}</h1>
                    <button><a href="/admin/chefs/{{chef.id}}/edit">Edit chef</a></button>
                        
                </div>
                
                    <div class="recipe__head">
                        <div class="recipe__head__img__chef">
                            <img src={{chef.avatar_img}} alt={{chef.name}}>
                        </div>
                        <div class="recipe__head__title">
                            <h5>{{chef.name}}</h5>
                        </div>
                        <div class="recipe__head__author">
                            <p>{{chef.total_recipes}} recipes</p>
                        </div>
                    </div>

                    <section class="chef__recipes">
                        <h1>Recipes</h1>
                        <div class="wrapper__body__cards__recipes">
                            {% for recipe in recipes%}
                                <div class="card__recipe" id={{recipe.id}}>
                                    <img src={{recipe.path}} alt={{recipe.title}}>
                                    <div class="card__recipe__details">
                                        <h5>{{chef.name}}</h5>
                                        <p>{{chef.total_recipes}} receitas</p>
                                        <a href="/admin/recipes/{{recipe.id}}">show</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </section>
            </div>
        <script src="/scripts.js"></script>
    {% endblock %}