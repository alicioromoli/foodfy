{% extends "../layout.njk" %}
    
    {% block content %}
            <div class="wrapper__body">
                <div class="wrapper__body__users-header">
                        <h1>Manager Recipes</h1>
                        <div class="wrapper__header__recipe__buttons">
                            <button type="submit"><a href="/admin/recipes/create">New</a></button>
                        </div>
                    </div>
                    <div class="wrapper__body__cards__recipes">
                    {% for recipe in recipes %}
                        <div class="card__recipe" id={{recipe.id}}>
                            <img src="{{recipe.img}}" alt={{recipe.title}}>
                            <div class="card__recipe__details">
                                <h5>{{recipe.title}}</h5>
                                <p>by {{recipe.chef_name}}</p>
                                <a href="/admin/recipes/{{recipe.id}}">show</a>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
            </div>
        <script src="/scripts.js"></script>
    {% endblock %}