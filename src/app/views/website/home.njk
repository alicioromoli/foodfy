 {% extends "../website/layout.njk" %}

 {% block navbar %}
    <div class="navbar__search">
        <form action="/recipes" method="get">
            <input 
                type="text"
                name="filter"
                placeholder="search recipes"
            >
            <button type="submit">Search</button>
        </form>
    </div>
{% endblock%}

 {% block content %}
 
            <div class="wrapper__header">
                <div class="wrapper__header__title">
                    <h1>The best Recipes</h1>
                    <p> Learn how to prepare the best recipes plate with the best professionals worldwide.</p>
                </div>
                <div class="wrapper__header__img">
                    <img src="/assets/chef.png" alt="chef">
                </div>
            </div>

            <div class="wrapper__body">
                <div class="wrapper__body__title">
                    <h1>Popular Recipes</h1>
                </div>
                <div class="wrapper__body__cards">
                    {%for recipe in recipes%}
                        <div class="card">
                            <a href="recipes/{{recipe.id}}"><img src="{{recipe.path}}" alt="{{recipe.title}}"></a>
                            <div class="card__title" id={{recipe.id}}>
                                <h5>{{recipe.title}}</h5>
                            </div>
                            <div class="card__author">
                                <p>by {{recipe.chef_name}}</p>
                            </div>
                        </div>
                    {%endfor%}
                </div>
            </div>
{% endblock %}